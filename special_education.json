          {
            "if": {
              "and": [
                "amenity=school"
              ]
            },
            "then": {
              "en": "School"
            }
          }
        ]
      },
      "description": {
        "en": "A layer showing schools."
      },
      "tagRenderings": [
        {
          "render": {
            "en": "The school is called {name}."
          },
